<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/email_register_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="用户注册"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_upload_profile"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_below="@id/email_register_way"
            android:layout_centerHorizontal="true"
            android:background="@drawable/email_profile" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_user_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:padding="8dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_user_register_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_user_register_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_user_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱号"
        android:padding="8dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/ck_accept_protocol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="我阅读并同意《软件许可及服务协议》" />

        <Button
            android:id="@+id/btn_send_register_verify"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#2196F3"
            android:text="发送验证码"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>