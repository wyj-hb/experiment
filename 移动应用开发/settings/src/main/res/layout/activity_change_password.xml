<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/email_register_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="重置密码"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_upload_profile"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_below="@id/email_register_way"
            android:layout_centerHorizontal="true"
            android:background="@drawable/email_profile" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_user_change_password_word_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:padding="8dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_new_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_user_new_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_change_password_email"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:hint="请输入邮箱号"
            android:padding="8dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_send_retrieve_password_verify"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:background="#2196F3"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>