<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verify_change_password_email"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    tools:context=".VerifyEmailActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="修改密码"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/email_profile"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/tv_user_change_password_verify_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱验证码"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_confirm_change_password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#2196F3"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>